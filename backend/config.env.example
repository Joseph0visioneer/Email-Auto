# ====================================
# Email Automation System Configuration
# ====================================
# 이 파일을 config.env로 복사하고 실제 값으로 수정하세요

# Flask 설정
SECRET_KEY=dev-secret-key-email-automation-2024
FLASK_ENV=development
DEBUG=true

# 데이터베이스 설정 (개발용 SQLite)
DATABASE_URL=sqlite:///email_automation.db

# CORS 설정
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# ====================================
# Google Sheets API 설정
# ====================================

# 방법 1: 서비스 계정 JSON 파일 사용 (권장)
GOOGLE_CREDENTIALS_PATH=config/google-credentials.json

# 방법 2: 환경변수로 JSON 직접 설정 (클라우드 배포용)
# GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project-id",...}

# ====================================
# 이메일 발송 설정
# ====================================

# 테스트 모드 (true: 실제 발송하지 않음, false: 실제 발송)
EMAIL_TEST_MODE=true

# SMTP 서버 설정 (Gmail 예시)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# 발송자 이메일 설정
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-16-digit-app-password
SENDER_NAME=Email Automation System

# ====================================
# Firebase 인증 설정 (선택사항)
# ====================================
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# ====================================
# 애플리케이션 설정
# ====================================
APP_NAME=Email Automation System
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# 개발 모드 설정
DEV_MODE=true
MOCK_DATA=false
